<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="controller.MainController" styleClass="grid-pane"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <Label fx:id="mNumberOfClustersLabel"
           text="Number of clusters: "
           GridPane.rowIndex="0"
           GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="mNumberOfClustersBox"
               GridPane.rowIndex="0"
               GridPane.columnIndex="1"/>

    <Label fx:id="mNumberOfIterationsLabel"
           text="Number of iterations: "
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="mNumberOfIterationsBox"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"/>

    <Button fx:id="mSubmitButton"
            onAction="#submitButton"
            text="Submit"
            GridPane.rowIndex="3"
            GridPane.columnIndex="2"/>

    <Label fx:id="mSSELabel"
           GridPane.columnSpan="3"
           GridPane.rowIndex="8"
           GridPane.columnIndex="0"/>

    <Label fx:id="mClusterOneLabel"
           GridPane.columnSpan="3"
           GridPane.rowIndex="9"
           GridPane.columnIndex="0"/>

    <Label fx:id="mClusterTwoLabel"
           GridPane.columnSpan="3"
           GridPane.rowIndex="10"
           GridPane.columnIndex="0"/>

    <Label fx:id="mClusterThreeLabel"
           GridPane.columnSpan="3"
           GridPane.rowIndex="11"
           GridPane.columnIndex="0"/>

    <Label fx:id="mClusterFourLabel"
           GridPane.columnSpan="3"
           GridPane.rowIndex="12"
           GridPane.columnIndex="0"/>

    <Label fx:id="mClusterFiveLabel"
           GridPane.columnSpan="3"
           GridPane.rowIndex="13"
           GridPane.columnIndex="0"/>
</GridPane>
